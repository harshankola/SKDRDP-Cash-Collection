<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FF8A65"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="org.skdrdpindia.cashcollectionapp.ui.DownloadDataFragment">

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9E80"
        android:enabled="false"
        android:text="@string/action_download"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnInflatedb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#DD2C00"
        android:clickable="true"
        android:enabled="true"
        android:onClick="inflateDb"
        android:text="@string/action_inflate"/>

</LinearLayout>
